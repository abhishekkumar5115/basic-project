       <div class="filter">
        <div> <i  class="fa-solid fa-mountain"></i> </div>
      <p  >Mountains</p>
       </div>
      </a>
      <a href="/listing/?search=castles" class="filtera">
       <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
       <p>castles</p>
       </div>
      </a>
       <a href="/listing/?search=amazingpool" class="filtera">
       <div class="filter">
        <div> <i class="fa-solid fa-person-swimming"></i></div>
       <p>Amazing pools</p>
       </div>
      </a>
       <a href="/listing/?search=camping" class="filtera">
       <div class="filter">
        <div> <i class="fa-solid fa-campground"></i></div>
       <p>Camping</p>
       </div>
      </a>
       <a href="/listing/?search=farms" class="filtera">
       <div class="filter">
        <div> <i class="fa-solid fa-cow"></i></div>
       <p>Farms</p>
       </div>
      </a>
       <a href="/listing/?search=Artic" class="filtera">
       <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
       <p>Artic</p>
       </div>
